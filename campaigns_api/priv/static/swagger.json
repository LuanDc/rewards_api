      "properties": {
        "description": {
          "description": "Campaign description",
          "type": "string"
        },
        "end_time": {
          "description": "Campaign end time",
          "format": "date-time",
          "type": "string"
        },
        "id": {
          "description": "Campaign UUID",
          "format": "uuid",
          "type": "string"
        },
        "inserted_at": {
          "description": "Creation timestamp",
          "format": "date-time",
          "type": "string"
        },
        "name": {
          "description": "Campaign name",
          "minLength": 3,
          "type": "string"
        },
        "start_time": {
          "description": "Campaign start time",
          "format": "date-time",
          "type": "string"
        },
        "status": {
          "default": "active",
          "description": "Campaign status",
          "enum": [
            "active",
            "paused"
          ],
          "type": "string"
        },
        "tenant_id": {
          "description": "Tenant ID",
          "type": "string"
        },
        "updated_at": {
          "description": "Last update timestamp",
          "format": "date-time",
          "type": "string"
        }
